extends layoutAdmin.pug

block content
	h1 Bonus,horas extras y mas.
	.container
		.form-group.row
			label.col-sm-2.col-form-label(for='staticEmail') Nombre
			.col-sm-11
				input.form-control.form-control-sm(type='text', placeholder='Nombre')

		.form-group.row
			label.col-sm-2.col-form-label(for='staticEmail') Descripcion
			.col-sm-11
				input.form-control.form-control-sm(type='text', placeholder='Descripcion')

		.form-group.row
			label.col-sm-2.col-form-label(for='staticEmail') Sueldo
			.col-sm-11
				input.form-control.form-control-sm(type='text', placeholder='Sueldo')

		.btn-group(role='group')
			button.btn.btn-primary(type='button') GUARDAR
			button.btn.btn-primary(type='button') LIMPIAR
	hr

	table.table.table-bordered.table-dark
		thead
			tr
				th(scope='col') #
				th(scope='col') Nombre
				th(scope='col') Descripcion
				th(scope='col') Sueldo/hora
		tbody
			tr
				th(scope='row') 1
				td Mark
				td Otto
				td @mdo


