extends layout.pug

block content
	.container
	// Outer Row
	.row.justify-content-center
		.col-xl-10.col-lg-12.col-md-9
			.card.o-hidden.border-0.shadow-lg.my-5
				.card-body.p-0
					// Nested Row within Card Body
					.row
						.col-lg-12
							.p-5
								.text-center
									h1.h4.text-gray-900.mb-4 Welcome Back!
								.user
									.form-group
										input#usuario.form-control.form-control-user(type='email', aria-describedby='emailHelp',placeholder='Enter Email Address...')
									.form-group
										input#password.form-control.form-control-user(type='password', placeholder='Password')
									a#btnLoguin.btn.btn-primary.btn-user.btn-block
										| Login
	script.
		$('#btnLoguin').click((e) => {
		    e.preventDefault()
		    axios.post('http://localhost:4000/login', {
			 usuario: $("#usuario").val(),
			 password: $("#password").val()
			})
			.then(function (response) {
			 	console.log(response);
			 	window.location.href = '/admin';
			})
			.catch(function (error) {
			 	console.log(error);
			});	
		})
			
		
										